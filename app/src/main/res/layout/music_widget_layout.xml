<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/widget_background">

    <!-- Top Section: Album Art + Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="8dp">

        <!-- Album Art with rounded corners -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/widget_album_art"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_music_note"
                android:contentDescription="@string/album_art"
                android:background="@drawable/album_art_background" />
        </FrameLayout>

        <!-- Title and Artist -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Track Playing"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <TextView
                android:id="@+id/widget_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unknown Artist"
                android:textColor="#E0E0E0"
                android:textSize="13sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:shadowColor="#80000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2" />

            <!-- Time Display -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/widget_current_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="#B0B0B0"
                    android:textSize="11sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/widget_total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="#B0B0B0"
                    android:textSize="11sp"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/widget_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:progressDrawable="@drawable/widget_progress_bar"
        android:max="100"
        android:progress="0" />

    <!-- Playback Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="4dp">

        <ImageButton
            android:id="@+id/widget_previous"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@android:drawable/ic_media_previous"
            android:background="@drawable/widget_button_background"
            android:contentDescription="@string/previous"
            android:scaleType="center"
            app:tint="#FFFFFF"
            android:padding="8dp" />

        <ImageButton
            android:id="@+id/widget_play_pause"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@android:drawable/ic_media_play"
            android:background="@drawable/widget_play_button_background"
            android:contentDescription="@string/play_pause"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:scaleType="center"
            app:tint="#FFFFFF"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/widget_next"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@android:drawable/ic_media_next"
            android:background="@drawable/widget_button_background"
            android:contentDescription="@string/next"
            android:scaleType="center"
            app:tint="#FFFFFF"
            android:padding="8dp" />

    </LinearLayout>

</LinearLayout>

